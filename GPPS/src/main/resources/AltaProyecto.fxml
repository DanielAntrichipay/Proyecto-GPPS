<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.AltaProyectoController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Título del proyecto:" />
            <TextField fx:id="tituloCampoDeTexto" promptText="Ingrese el título del proyecto" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox alignment="TOP_LEFT" spacing="10.0">
            <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Descripción:" />
            <TextArea fx:id="descripcionAreaDeTexto" prefHeight="100.0" promptText="Ingrese la descripción del proyecto" HBox.hgrow="ALWAYS" VBox.vgrow="SOMETIMES" />
        </HBox>

        <HBox alignment="TOP_LEFT" spacing="10.0">
            <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Áreas de interés:" />
            <TextArea fx:id="areasInteresAreaDeTexto" prefHeight="100.0" promptText="Ingrese las áreas de interés" HBox.hgrow="ALWAYS" VBox.vgrow="SOMETIMES" />
        </HBox>

        <HBox alignment="TOP_LEFT" spacing="10.0">
            <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Objetivos:" />
            <TextArea fx:id="objetivosProyectoAreaTexto" prefHeight="80.0" promptText="Ingrese los objetivos del proyecto" HBox.hgrow="ALWAYS" VBox.vgrow="SOMETIMES" />
        </HBox>

        <HBox alignment="TOP_LEFT" spacing="10.0">
            <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Aptitudes requeridas:" />
            <TextArea fx:id="aptitudesProyectoAreaTexto" prefHeight="100.0" promptText="Ingrese las aptitudes requeridas" HBox.hgrow="ALWAYS" VBox.vgrow="SOMETIMES" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Entidad del proyecto:" />
            <ComboBox fx:id="entidadesComboBox" onAction="#entidadComboBoxElegida" prefWidth="200.0" promptText="Seleccione una entidad" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Planes de Trabajo:" />
            <Button fx:id="agregarPlanDeTrabajoBoton" mnemonicParsing="false" onAction="#botonPlanDeTrabajoPresionado" text="Agregar Planes de Trabajo" />
        </HBox>

        <ButtonBar>
            <buttons>
                <Button fx:id="cancelarProyectoBoton" mnemonicParsing="false" onAction="#botonCancelarPresionado" text="Cancelar" />
                <Button fx:id="aceptarProyectoBoton" mnemonicParsing="false" onAction="#botonAceptarPresionado" text="Aceptar" />
            </buttons>
        </ButtonBar>
    </children>
</VBox>
